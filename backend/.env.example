# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# PostgreSQL Database (Existing)
# ============================================
PGUSER=your_postgres_username
PGHOST=localhost
PGDATABASE=your_database_name
PGPASSWORD=your_postgres_password
PGPORT=5432

# ============================================
# MongoDB Atlas (NEW - Required for GridFS)
# ============================================
# Get this from MongoDB Atlas:
# 1. Create cluster at https://cloud.mongodb.com
# 2. Click "Connect" â†’ "Connect your application"
# 3. Copy connection string and replace <username>, <password>
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGO_DB_NAME=electronics_astra

# ============================================
# Session & Authentication
# ============================================
SESSION_SECRET=your_super_secret_session_key_change_this_in_production
JWT_SECRET=your_jwt_secret_key_change_this

# ============================================
# Server Configuration
# ============================================
PORT=5001
NODE_ENV=development

# ============================================
# Email Configuration (Optional - for OTP)
# ============================================
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
